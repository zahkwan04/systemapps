<Window x:Class="systemapps.custonipaddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:systemapps"
        mc:Ignorable="d"
        Title="Enter IP Address" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="IP Address:" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="ipaddresstxtbox" HorizontalAlignment="Left" Height="32" Margin="83,34,0,0"  VerticalAlignment="Top" Width="185" FontSize="14" Background="#FFF1EAEA"/>
        <Button x:Name="confirmbutton" Content="Confirm" HorizontalAlignment="Left" Margin="51,101,0,0" VerticalAlignment="Top" Width="75" FontSize="12" Height="23" Click="confirmbutton_Click"/>
        <Button x:Name="cancelbutton" Content="Cancel" HorizontalAlignment="Left" Margin="158,101,0,0" VerticalAlignment="Top" Width="75" FontSize="12" Height="23" Click="cancelbutton_Click"/>
        <Label Content="*Cancel to insert empty IP" Margin="83,65,32,54"/>
    </Grid>
</Window>
